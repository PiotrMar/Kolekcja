@model IEnumerable<Kolekcja.Models.Element>

@{
    ViewBag.Title = "Zbiór";
}

<h2>Zbiór</h2>

<p>
    @using (Html.BeginForm("Index","Elementy",FormMethod.Get))
    {
        <p>
    Wybierz gatunek: @Html.DropDownList("elementGatunek", "All")
    Podaj tytuł: @Html.TextBox("SearchString") 
    <input type="submit" value="Wyszukaj" /></p>
    }
    @Html.ActionLink("Dodaj nową pozycję", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tytul)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RokWydania)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gatunek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rodzaj)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tytul)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RokWydania)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gatunek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rodzaj)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.ID }) |
            @Html.ActionLink("Usuń pozycję", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
